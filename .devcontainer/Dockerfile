FROM ubuntu:19.10

# Install git, process tools
RUN apt-get update && apt-get -y install git procps

# Install C++ tools
RUN apt-get -y install build-essential cmake cppcheck valgrind automake bison flex g++ git libboost-all-dev libevent-dev libssl-dev libtool make pkg-config

# Clean up
RUN apt-get autoremove -y \
    && apt-get clean -y \
    && rm -rf /var/lib/apt/lists/*

# Set the default shell to bash instead of sh
ENV SHELL /bin/bash